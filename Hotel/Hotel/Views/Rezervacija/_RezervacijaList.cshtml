@model IEnumerable<Hotel.Models.Rezervacija>
@{
    ViewBag.Title = "_RezervacijaList";
}


<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Soba.BrojSobe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImeIPrezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumOd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumDo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Otkazana)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-size: 16px">
                @Html.DisplayFor(modelItem => item.Soba.BrojSobe)
            </td>
            <td style="font-size: 16px">
                @Html.DisplayFor(modelItem => item.ImeIPrezime)
            </td>
            <td style="font-size: 16px">
                @Html.DisplayFor(modelItem => item.DatumOd)
            </td>
            <td style="font-size: 16px">
                @Html.DisplayFor(modelItem => item.DatumDo)
            </td>
            <td style="font-size: 16px">
                @if (item.Otkazana == true)
                {
                    @Html.DisplayName("Da")
                }
                else
                {
                    @Html.DisplayName("Ne")
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                @Html.ActionLink("Otkazi rezervaciju", "Cancel", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>